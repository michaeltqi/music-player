<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainSelectableItemTheme">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="MainSelectableItemBackground">
        <item name="android:theme">@style/MainSelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SecondarySelectableItemTheme">
        <item name="colorControlHighlight">@color/textSecondaryColor</item>
    </style>

    <style name="SecondarySelectableItemBackground">
        <item name="android:theme">@style/SecondarySelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CreatePlaylistDialog">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:textColorHint">@color/textSecondaryColor</item>
    </style>

</resources>
